{
  "name": "snack-helper",
  "version": "2.0.0",
  "description": "A universal CSS helpers library.",
  "main": "dist/snack-helper.css",
  "files": [
    "dist",
    "src"
  ],
  "author": "nzbin",
  "license": "MIT",
  "keywords": [
    "snack-helper",
    "css-helpers",
    "css-variables",
    "css-utilities",
    "sass",
    "scss"
  ],
  "homepage": "https://nzbin.github.io/snack-helper/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nzbin/snack-helper.git"
  },
  "bugs": {
    "url": "https://github.com/nzbin/snack-helper/issues"
  },
  "scripts": {
    "start": "run-p build:dev watch",
    "build": "run-s clean sass sassmin postcss copy",
    "build:dev": "run-s sass copy",
    "clean": "rimraf dist",
    "sass": "node-sass --output-style expanded src/snack-helper.scss dist/snack-helper.css",
    "sassmin": "node-sass --output-style compressed src/snack-helper.scss dist/snack-helper.min.css",
    "copy": "cpy dist/*.css !dist/*.min.css docs/css",
    "postcss": "postcss -r dist/*.css --map",
    "watch": "onchange src -- run-p build:dev",
    "lint": "stylelint --syntax scss 'src/**/*.scss' --fix"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "cpy-cli": "^3.1.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "postcss-header": "^3.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.19.0"
  },
  "engines": {
    "node": ">=4"
  }
}
